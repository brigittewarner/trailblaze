<h1>My Trails</h1>
<table class="table table-hover table-bordered" >
<tr>
  <th>Path</th>
  <th>Trail Name</th>
  <th>Trail Description</th>
  <th>Actions</th>
</tr>
<% @trails.each do |trail| %>
<tr>
		<td><%= link_to trail.id, trail_path(trail) %></td>
		<td><%= trail.name %></td>
		<td><%= trail.description %></td>
		<td>
			<%= link_to 'edit', edit_trail_path(trail), class: 'btn btn-success' %>
			<%= link_to 'delete', trail_path(trail), class: 'btn btn-danger', method: :delete, confirm: 'Are You Sure?' %>
		</td>
	<% end %>
</tr>
</table>
<%= link_to 'New Trail', new_trail_path, class: 'btn btn-warning btn-large' %>
