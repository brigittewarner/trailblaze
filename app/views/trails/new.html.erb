<h1>Trailhead</h1>
<h3>Start a new trail.</h3>
<div class="row">
  <div class="span6 offset3">
      <%= form_for @trail, :url => trails_path do |f| %>
    	<%= f.label :name %>
    	<%= f.text_field :name %>
    	<%= f.label :description %>
    	<%= f.text_field :description %>
      <br>
    	<%= f.submit "Start Trail", class: "btn btn-large btn-warning" %>
    <% end %>
  </div>
</div>
